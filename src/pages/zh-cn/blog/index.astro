---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Only show Chinese posts (posts with 'zh-cn/' prefix in slug)
const posts = (await getCollection('blog'))
  .filter((post) => post.slug.startsWith('zh-cn/'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const stripLangFromSlug = (slug: string) => slug.replace(/^zh-cn\//, '');
---

<BaseLayout
  title="存档编辑器指南与教程"
  description="学习如何编辑游戏存档、修改属性、解锁功能的完整指南。"
>
  <main class="container mx-auto px-4 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">指南与教程</h1>
      <p class="text-xl text-gray-600">掌握存档编辑的技巧</p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        posts.map((post) => (
          <article class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
            <div class="p-6">
              <div class="flex items-center gap-2 mb-4">
                {post.data.tags.map((tag) => (
                  <span class="bg-primary-50 text-primary-700 text-xs px-2 py-1 rounded-full font-medium uppercase tracking-wide">
                    {tag}
                  </span>
                ))}
              </div>
              <h2 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2">
                <a href={`/zh-cn/blog/${stripLangFromSlug(post.slug)}/`} class="hover:text-primary-600 transition-colors">
                  {post.data.title}
                </a>
              </h2>
              <p class="text-gray-600 mb-4 line-clamp-3 text-sm">{post.data.description}</p>
              <div class="flex items-center justify-between text-sm text-gray-500 mt-auto">
                <span>{post.data.pubDate.toLocaleDateString('zh-CN')}</span>
                <span>{post.data.author}</span>
              </div>
            </div>
          </article>
        ))
      }
    </div>

    {
      posts.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500">暂无文章。</p>
        </div>
      )
    }
  </main>
</BaseLayout>
