            >DDLC</span
          >
          <span class="px-4 py-2 bg-gray-100 rounded-full text-sm text-gray-700 font-medium"
            >Deep Rock Galactic</span
          >
          <span class="px-4 py-2 bg-gray-100 rounded-full text-sm text-gray-700 font-medium"
            >.rpgsave</span
          >
          <span class="px-4 py-2 bg-gray-100 rounded-full text-sm text-gray-700 font-medium"
            >.sav (GVAS)</span
          >
          <span class="px-4 py-2 bg-gray-100 rounded-full text-sm text-gray-700 font-medium"
            >.save</span
          >
          <span class="px-4 py-2 bg-gray-100 rounded-full text-sm text-gray-700 font-medium"
            >PlayerPrefs</span
          >
        </div>
        <p class="text-center text-gray-500 mt-6 text-sm">
          その他、対応エンジンで作られた数千のゲーム。
        </p>
      </div>

      <!-- Blog Section -->
      <div class="mt-20 bg-primary-50 rounded-2xl p-12">
        <h2 class="text-3xl font-bold text-center mb-4 text-gray-900">セーブ編集ガイド</h2>
        <p class="text-center text-gray-600 mb-8 max-w-2xl mx-auto">
          詳しいガイドとチュートリアルでセーブ編集をマスター。
        </p>
        <div class="grid md:grid-cols-3 gap-6">
          {
            (await getCollection('blog'))
              .filter((post) => post.slug.startsWith('ja/'))
              .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
              .slice(0, 3)
              .map((post) => (
                <a
                  href={`/blog/${post.slug}`}
                  class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow block"
                >
                  <h3 class="font-bold text-lg mb-2 text-gray-900 line-clamp-2">
                    {post.data.title}
                  </h3>
                  <p class="text-gray-600 text-sm line-clamp-3">{post.data.description}</p>
                  <div class="mt-4 text-primary-600 text-sm font-medium">ガイドを読む →</div>
                </a>
              ))
          }
        </div>
        <div class="text-center mt-8">
          <a
            href="/blog"
            class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors"
          >
            すべてのガイドを見る
          </a>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Animated counter for stats
    const counters = document.querySelectorAll('.counter');
    const animationDuration = 1500;

    const animateCounter = (counter: Element) => {
      const target = parseInt(counter.getAttribute('data-target') || '0');
      const startTime = performance.now();

      const updateCounter = (currentTime: number) => {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / animationDuration, 1);
        const easeOutQuart = 1 - Math.pow(1 - progress, 4);
        const current = Math.round(target * easeOutQuart);
        counter.textContent = current.toString() + (target === 100 ? '%' : '+');
        if (progress < 1) {
          requestAnimationFrame(updateCounter);
        }
      };
      requestAnimationFrame(updateCounter);
    };

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            animateCounter(entry.target);
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.5 }
    );

    counters.forEach((counter) => observer.observe(counter));
  </script>

  <!-- Smart File Upload Detection -->
  <script>
    const fileInput = document.getElementById('smart-file-input');
    const uploadZone = document.getElementById('smart-upload-zone');

    const extensionMap: Record<string, string> = {
      '.rpgsave': '/ja/editor/rpg-maker-mv',
      '.rvdata2': '/ja/editor/rpg-maker-mv',
      '.rvdata': '/ja/editor/rpg-maker-mv',
      '.sav': '/ja/editor/unreal',
      '.save': '/ja/editor/renpy',
      '.xml': '/ja/editor/unity',
      '.plist': '/ja/editor/unity',
      '.ini': '/ja/editor/gamemaker',
      '.json': '/ja/editor/gamemaker',
      '.nson': '/ja/editor/naninovel',
    };

    const getExtension = (filename: string): string => {
      const lastDot = filename.lastIndexOf('.');
      return lastDot !== -1 ? filename.slice(lastDot).toLowerCase() : '';
    };

    const handleFile = (file: File) => {
      const ext = getExtension(file.name);
      const editorPath = extensionMap[ext];

      if (editorPath) {
        const reader = new FileReader();
        reader.onload = (e) => {
          const fileData = {
            name: file.name,
            content: e.target?.result,
            type: file.type,
          };
          sessionStorage.setItem('pendingFile', JSON.stringify(fileData));
          window.location.href = editorPath;
        };
        reader.readAsDataURL(file);
      } else {
        alert(`ファイル形式「${ext}」は認識されません。エディタを手動で選択してください。`);
      }
    };

    fileInput?.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      if (target.files && target.files[0]) {
        handleFile(target.files[0]);
      }
    });

    uploadZone?.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadZone.classList.add('border-primary-400', 'bg-white/10');
    });

    uploadZone?.addEventListener('dragleave', (e) => {
      e.preventDefault();
      uploadZone.classList.remove('border-primary-400', 'bg-white/10');
    });

    uploadZone?.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadZone.classList.remove('border-primary-400', 'bg-white/10');
      const files = (e as DragEvent).dataTransfer?.files;
      if (files && files[0]) {
        handleFile(files[0]);
      }
    });
  </script>
</BaseLayout>
