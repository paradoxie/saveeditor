---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import FAQ from '../FAQ.astro';
import { ui, defaultLang } from '../../i18n/ui';
import { useTranslations } from '../../i18n/utils';

interface Props {
  lang?: keyof typeof ui;
  title: string;
  description: string;
  keywords: string;
}

const { lang = 'en', title, description, keywords } = Astro.props;
const t = useTranslations(lang);
const siteUrl = Astro.site ? new URL(Astro.site).origin : 'https://saveeditor.top';
const defaultOgImage = `${siteUrl}/images/blog/rpg-maker-cover.webp`;
const homeUrl = lang === 'en' ? `${siteUrl}/` : `${siteUrl}/${lang}/`;

// Helper to handle localized links
const getPath = (path: string) => {
  if (path.startsWith('http')) return path;
  // If path is root '/', handle carefully
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  if (lang === defaultLang) {
    return cleanPath ? `/${cleanPath}/` : '/';
  }
  return cleanPath ? `/${lang}/${cleanPath}/` : `/${lang}/`;
};

const blogPosts = (await getCollection('blog'))
  .filter((post) => {
    if (lang === 'en') return !post.slug.includes('/');
    return post.slug.startsWith(`${lang}/`);
  })
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 4); // Limit to 4 posts
