    </div>
  </section>

  <main class="flex-grow container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <!-- Social Proof Stats -->
      <div class="mb-16 grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center p-6 bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl">
